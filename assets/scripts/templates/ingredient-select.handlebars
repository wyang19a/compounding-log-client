

<table id="ingredient-table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">ID</th>
      <th class="th-sm">Name</th>
      <th class="th-sm">Strength</th>
      <th class="th-sm">Form</th>
      <th class="th-sm">Type</th>
      <th class="th-sm">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each ingredients as |ingredient|}}
      <section data-id="{{ingredient.id}}">
        <tr>
          <td>{{ingredient.id}}</td>
          <td>{{ingredient.name}}</td>
          <td>{{ingredient.strength}}</td>
          <td>{{ingredient.form}}</td>
          <td>{{ingredient.ing_type}}</td>
          <td>

                <button type="button" data-toggle="modal" data-target="#addIngredientModal" data-id="{{ingredient.id}}" class="btn btn-primary select-ing-button">
                  <svg id="i-plus" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                    <path d="M16 2 L16 30 M2 16 L30 16" />
                  </svg>
                </button>

          </td>
        </tr>
      </section>
    {{/each}}
  </tbody>
</table>
