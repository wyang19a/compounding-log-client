

<table id="ingredient-table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">ID</th>
      <th class="th-sm">Name</th>
      <th class="th-sm">Strength</th>
      <th class="th-sm">Form</th>
      <th class="th-sm">Type</th>
      <th class="th-sm">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each ingredients as |ingredient|}}
      <section data-id="{{ingredient.id}}">
        <tr>
          <td>{{ingredient.id}}</td>
          <td>{{ingredient.name}}</td>
          <td>{{ingredient.strength}}</td>
          <td>{{ingredient.form}}</td>
          <td>{{ingredient.ing_type}}</td>
          <td>


                <button data-id="{{ingredient.id}}" title="Edit" class="btn btn-default update-btn">
                  <svg id="i-edit" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                    <path d="M30 7 L25 2 5 22 3 29 10 27 Z M21 6 L26 11 Z M5 22 L10 27 Z" />
                  </svg>
                </button>
                <button data-id="{{ingredient.id}}" title="Delete" class="btn btn-danger delete-btn">
                  <svg id="i-close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                      <path d="M2 30 L30 2 M30 30 L2 2" />
                  </svg>
                </button>

          </td>
        </tr>
      </section>
    {{/each}}
  </tbody>
</table>
