

<table id="product-table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">ID</th>
      <th class="th-sm">Name</th>
      <th class="th-sm">Form</th>
      <th class="th-sm">Creator</th>
      <th class="th-sm">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each products as |product|}}
      <section data-id="{{product.id}}">
        <tr>
          <td>{{product.id}}</td>
          <td>{{product.name}} {{product.strength}}</td>
          <td>{{product.form}}</td>
          <td>{{product.user.email}}</td>
          <td>
            <button data-id="{{product.id}}" class="btn btn-primary show-btn">Show</button>
            <button data-id="{{product.id}}" class="btn btn-primary update-btn">Update</button>
            <button data-id="{{product.id}}" class="btn btn-danger delete-btn">Delete</button>
          </td>
        </tr>
      </section>
    {{/each}}
  </tbody>
</table>
